@{
    ViewData["title"] = "List Compare";
    var key = 0;
}

<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width = device-width"/>
    </head>

<body>
    <h3>List Compare</h3>

    <table class="table" id="myTable">
        <thead>
            <th>Id</th>
            <th>Product Name</th>
            <th>Product Description</th>
            <th>Product Price</th>
            <th>Product Image</th>
            <th>Action</th>
        </thead>
        <tbody>
            @foreach (var compare_product in Model)
            {
                key++;
                <tr>
                    <td>@key</td>
                    <td>@compare_product.Product.Name</td>
                    <td>@Html.Raw(compare_product.Product.Description)</td>
                    <td>@compare_product.Product.Price.ToString("#,##0 VNĐ")</td>
                    <td><img src="~/media/products/@compare_product.Product.Image" width="120px" height="150px" /> </td>
                    <td><a class="btn btn-danger btn-sm confirmDeletion" asp-action="DeleteCompare" asp-controller="Home" asp-route-Id="@compare_product.Product.Id">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
